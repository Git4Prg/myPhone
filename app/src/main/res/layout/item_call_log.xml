<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Call Type Icon -->
    <ImageView
        android:id="@+id/ivCallType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Call Type"
        android:src="@drawable/call_received" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Contact Name -->
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1234567890"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- Call Date & Duration -->
        <TextView
            android:id="@+id/tvCallDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/02/2025 15:30"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvCallDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 min 30 sec"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

    </LinearLayout>

</LinearLayout>
